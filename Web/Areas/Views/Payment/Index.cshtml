@model Web.ViewModels.PaymentRequestViewModel
@{
    ViewBag.Title = "پرداخت آنلاین";
}
<style>

    #container {
        box-shadow: 5px 5px 10px #888888;
        padding: 30px;
        text-align: center;
    }

</style>

<form id="container" method="post" asp-action="Index" class="text-center">
    @if (!ViewData.ModelState.IsValid)
    {
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary(false, "", new { @style = "text-align: initial;" })
    </div>
    }    
    <div class="row">
        <div class="offset-xl-4 offset-lg-4 offset-md-3"></div>
        <div class="form-group col-xl-4 col-lg-4 col-md-6 col-sm-12">
            <label asp-for="BillingId"></label>
            <input type="text" class="form-control text-center" asp-for="BillingId">
        </div>
    </div>
    <div class="row">
        <div class="offset-xl-4 offset-lg-4 offset-md-3"></div>
        <div class="form-group col-xl-4 col-lg-4 col-md-6 col-sm-12">
            <label asp-for="PaymentCode"></label>
            <input type="text" class="form-control text-center" asp-for="PaymentCode">
        </div>
    </div>
    <div class="row">
        <div class="offset-xl-4 offset-lg-4 offset-md-3"></div>
        <div class="form-group col-xl-4 col-lg-4 col-md-6 col-sm-12">
            <button type="submit" class="btn btn-primary w-100">انتقال به صفحه پرداخت</button>
        </div>
    </div>
</form>


